        <!-- Modal -->
<div id="actualizar" class="modal fade" role="dialog">
    <div class="modal-dialog">
  
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Actualización de reservas</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          
        </div>
        <div class="modal-body">
          <div class="col">
              <h4>Reserva con ID:</h4>
              <br>
              <h4>Nombre:</h4>
              <br>
              <h4>Contacto:</h4>
              <br>
              <div class="input-group input-group-sm"  style="text-align: right;">
                                                  <div class="input-group-prepend"><span class="input-group-text">Fecha</span></div>
                                                  <input type="date" placeholder="Fecha" class="form-control" >
                                                  
               </div>
               <br>
               <div class="input-group input-group-sm"  style="text-align: right;">
                                                  <div class="input-group-prepend"><span class="input-group-text">Hora</span></div>
                                                  <input type="time" placeholder="Hora" class="form-control" >
                                                  
               </div>
               <br>
               <div class="input-group input-group-sm"  style="text-align: right;">
                                                  <div class="input-group-prepend"><span class="input-group-text">Descripción</span></div>
                                                  <input type="text" placeholder="Descripción" class="form-control" >
                                                  
               </div>
              <br>
              <div class="input-group input-group-sm"  style="text-align: right;">
                                                  <div class="input-group-prepend"><span class="input-group-text">Tipo</span></div>
                                                  <input type="text" placeholder="Tipo" class="form-control" >
                                                  
               </div>
               <br>
               <div class="input-group input-group-sm"  style="text-align: right;">
                                                  <div class="input-group-prepend"><span class="input-group-text">Paquete</span></div>
                                                  <input type="text" placeholder="Paquete" class="form-control" >
                                                  
               </div>
               <br>
               <div class="input-group input-group-sm"  style="text-align: right;">
                                                  <div class="input-group-prepend"><span class="input-group-text">Mesa</span></div>
                                                  <input type="number" placeholder="Mesa" class="form-control" >
                                                  
               </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal">Guardar</button>
        </div>
      </div>
  
    </div>
  </div>
  <!-- End Modal  -->
         <div class="row">
                    <!-- ============================================================== -->
                    <!-- basic table  -->
                    <!-- ============================================================== -->
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="card">
                            <h5 class="card-header">Lista reservas</h5>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered first">
                                        <thead>
                                            <tr>
                                                <th>id</th>
                                                <th>Cliente</th>
                                                <th>Contacto</th>
                                                <th>Correo</th>
                                                <th>Tipo</th>
                                                <th>Fecha</th>
                                                <th>Hora</th>
                                                <th>Descripción</th>
                                                <th>Paquete</th>
                                                <th>Mesa</th>
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                        <% for(var i=0;i < resultado.length;i++) {  %>
                                            <% if(allowed.indexOf(i)!=-1){ %>
                                             
                                                <tr>
                                                
                                                    <td ><a href="#" data-toggle="modal" data-target="#actualizar"><%=resultado[i].idReserva    %></a></td>
                                                    <td><%=resultado[i].nombreCliente   %></td>
                                                    <td><%=resultado[i].telCliente      %></td>
                                                    <td><%=resultado[i].correoCliente   %></td>
                                                    <td><%=resultado[i].tipoCelebracion %></td>
                                                    <td><%=resultado[i].HoraFecha.split(' ')[0]       %></td>
                                                    <td><%=resultado[i].HoraFecha.split(' ')[1]       %></td>
                                                    <td><%=resultado[i].descripcion     %></td>
                                                    <td><%=resultado[i].paqueteElegido  %></td>
                                                    <td><%=resultado[i].Mesa_idMesa     %></td>
                                                
                                                </tr>
                                            
                                            <%}%>
                                        <%}%>
                                            
                                    </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
